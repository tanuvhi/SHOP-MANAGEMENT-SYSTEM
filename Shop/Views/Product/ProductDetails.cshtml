@model Shop.Models.ProductModel

@{
    ViewBag.Title = "ProductDetails";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<h2>ProductDetails</h2>

<div>
    <h4>Product</h4>
	<hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.product.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.product.Name)
        </dd>

    </dl>

</div>
<div>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayName("Product Color")
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.productColor)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Colors.Name)
                </td>
                
            </tr>
        }

    </table>
</div>
<div> 
    <table class="table">
        <tr>
            <th>
                @Html.DisplayName("Product Company")
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.productCompany)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Companies.Name)
                </td>
                <td>
                    @*@*Html.ActionLink("Edit", "ProductCompanyEdit", new { id = item.ProductCompanyId })*@ 
                </td>
            </tr>
        }

    </table>
</div>
<p>

    @Html.ActionLink("Back to List", "ProductList")
</p>
