@model Shop.Models.Product

@{
    ViewBag.Title = "AddNewProduct";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";

}

<h2>AddNewProduct</h2>

@using (Html.BeginForm("AddNewProduct", "Product", FormMethod.Post, new { @class = "form-horizontal"}))
{
    @Html.AntiForgeryToken()
      <div class="col-lg-12 col-md-12">

        @if (TempData["SuccessMessageProduct"] != null)
        {
            <div class="alert alert-success">@TempData["SuccessMessageProduct"]</div>
        }
        @if (TempData["UnsuccessMessageProduct"] != null)
        {
            <div class="alert alert-danger">@TempData["UnsuccessMessageProduct"]</div>
        }
        </div>
    <div class="form-horizontal">
        <h4>Product</h4>
        <hr />
       

        <div class="form-group">
            @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control", required = string.Empty })
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>

        <div class="form-group">
            @Html.Label( "Color", new { @class = "control-label col-md-2" })
            <div class="col-md-10">            
                @Html.ListBox("color", ViewBag.Color as SelectList, new { size = 8 })
            </div>
        </div>

        <div class="form-group">
            @Html.Label( "Company", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
             
                @Html.ListBox("company",ViewBag.Company as SelectList, new { size = 8 })

              
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
    
    
    
    
}

<div>
    @Html.ActionLink("Back to List", "ProductList")
</div>

